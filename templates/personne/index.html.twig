{% endblock %}
{% block body %}
<table class="global">
    <thead class="tete">
        <tr class="tete_nav">
            <th scope="col">Nom</th>
            <th scope="col">Pr√©nom</th>
            <th scope="col">ville</th>
            <th scope="col">code postal</th>
            <th scope="col">telephone</th>
            <th scope="col"><form class="d-flex" role="search" method="get" action="">
                <input class="form-control me-2" type="search" name="search" placeholder="search" aria-label="search" value="{{search | default ("")}}">
