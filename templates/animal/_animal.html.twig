{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/lst_client.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1
/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
{% endblock %}
{% block body %}
    <table class="global">
        <thead class="tete">
        <tr class="tete_nav">
            <th scope="col">Nom</th>
            <th scope="col">Type</th>
            <th scope="col">Age</th>
            <th scope="col">Poids</th>
            <th scope="col"><form class="d-flex" role="search" method="get" action="">
                    <input class="form-control me-2" type="search" name="search" placeholder="Rechercher animal" aria-label="search" value="{{search | default ("")}}">
                    <button style = "float: right" class="boutton btn btn-light " onclick="window.location.href ='{{ path('app_animal_create', {'id': clientId }) }}';">Ajouter</button>
                </form>
            </th>
        </tr>
        </thead>
        <tbody class="animaux">
        {% for animal in lstAnimal %}
            <tr class="animal">
                    <th scope="row" class="nomAnimal">{{ animal.nomAnimal }} : </th>
                    <td class="Espece">{{ animal.EspeceAnimal}}</td>
                    <td class="Espece">{{ animal.AgeAnimal}}</td>
                    <td class="Espece">{{ animal.poidsAnimal}} Kilos</td>
                <td><button class="boutton btn btn-light"><a href="{{ path('app_animal_show', {'id': animal.id }) }}">Plus d'informations</a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}