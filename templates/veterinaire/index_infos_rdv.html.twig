{% extends 'base.html.twig' %}

{% block title %}
    Vétérinaire - RDV
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('_header.html.twig') }}
    {{ include('veterinaire/_navbar.html.twig',{ current_page: ''}) }}
        <link rel="stylesheet" href="{{ asset('css/info_rdv.css') }}">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1
            /css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


    <div class="row">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                <h5 class="card-header">
                    Propriétaire
                </h5>

                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Adresse : {{ client.adrPers }} </li>
                                <li class="list-group-item">Ville : {{ client.villePers }}</li>
                            </ul>
                    </div>
                </div>
                <div class="card">
                <h5 class="card-header">
                    Animal
                </h5>

                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Nom : {{ animal.nomAnimal }}</li>
                        <li class="list-group-item">Race : {{ animal.EspeceAnimal }}</li>
                        <li class="list-group-item">Poid : {{ animal.poidsAnimal }} kg</li>
                    </ul>
                </div>
                </div>
            </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">
                    Lieu
                </h5>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Adresse : {{ client.adrPers }} </li>
                        <li class="list-group-item">Ville : {{ client.villePers }}</li>
                    </ul>
                    <form action="http://maps.google.com/maps" target="_blank" method="get">
                        <br>
                        <h6 class="card-title ">Entrez votre adresse de départ :</h6>
                        <input name="saddr" type="text">
                        <input name="daddr" type="hidden" value="58 Rue Gambetta, 51100 Reims">
                        <input type="submit" class="btn btn-secondary" value="Trajet">
                    </form>
                </div>
            </div>
        </div>


    </div>


    {% endif %}
{% endblock %}

