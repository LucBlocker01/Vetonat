{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/lst_client.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1
/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
{% endblock %}
{% block body %}
    {{ include('_header.html.twig') }}
    {{ include('veterinaire/_navbar.html.twig', { current_page: 'clients'}) }}
    <table class="global">
        <thead class="tete">
        <tr class="tete_nav">
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Ville</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Téléphone</th>
            <th scope="col"><form class="d-flex" role="search" method="get" action="">
                    <input class="form-control me-2" type="search" name="search" placeholder="Search..." aria-label="search" value="{{search | default ("")}}">
                    <button class="boutton btn btn-light "><a href = {{ path('app_client_create') }}>Ajouter</a></button>
                </form></th>
        </tr>
        </thead>
        <tbody class="Personne">
        {% for  Personne in lstContact %}
            <tr class="contact">
                <th scope="row" class="nom">{{Personne.nomPers}}</th>
                <td class="pnom">{{Personne.pnomPers}}</td>
                <td class="ville">{{Personne.villePers}}</td>
                <td class="code">{{Personne.cpPers}}</td>
                <td class="tel">{{ Personne.telPers }}</td>
                <td class="center"><button class="boutton btn btn-light"><a href="{{ path('app_animal', {'clientId': Personne.client.id }) }}">Animaux</a></button>
                    <button class="boutton btn btn-light"><a href = {{ path('app_client_update', {'id': Personne.id }) }}><span class="material-symbols-outlined">edit</span></a></button>
                    <button class="boutton btn btn-light"><a href = {{ path('app_client_delete', {'id': Personne.id }) }}><span class="material-symbols-outlined">delete</span></a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    Vétérinaire - Clients
{% endblock %}

